{{!-- <h1>Burgers!</h1> --}}
<div class="container-fluid" >
  	<div class="jumbotron jumbotron-fluid">
		<h1 class="display-4">Burger Bliss</h1>
	</div>
 
  <div class="row canYouSeeMeNow">
    <div class="col-6">
     <h1>Burgers waiting to be Eaten!</h1>


<ul>
  {{#each burgers}}
    {{#unless devoured}}
      {{> burgers/burgerB devoured=true}}
    {{/unless}}
  {{/each}}
</ul>
</div>
  
    <div class="col-6">
     <h1>Burgers that have been Devoured!</h1>

<ul>
  {{#each burgers}}
    {{#if devoured}}
      {{> burgers/burgerB devoured=false}}
    {{/if}}
  {{/each}}
</ul>
    </div>
  </div>
</div>

 <div class="row canYouSeeMeNow2">
    <div class="col">
<i class="fas fa-hamburger"></i>
<h1>Add a Burger</h1>
<form class="create-form">
  <div class="form-group">
    <label for="burg">Burger:</label>
    <textarea type="text" id="burg" name="name"></textarea>
  </div>

  <button class="square_btn" type="submit">Add My Burger</button>
</form>
    </div>
 </div>

<h1>Burgers!</h1>

<h2>Burgers waiting to be Eaten!</h2>

<ul>
  {{#each }}
    {{#unless }}
      {{>  eaten=true}}
    {{/unless}}
  {{/each}}
</ul>

<h2>Burgers that have been devoured</h2>

<ul>
  {{#each }}
    {{#if }}
      {{>  eaten=false}}
    {{/if}}
  {{/each}}
</ul>

<h2>Add a Burger</h2>
<form class="create-form">
  <div class="form-group">
    <label for="ca">Burger:</label>
    <input type="text" id="ca" name="name">
  </div>

  <button type="submit">Add My Burger</button>
</form>
